{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/api/index.py"
        },
        {
            "src": "/docs",
            "dest": "backend/api/index.py"
        },
        {
            "src": "/openapi.json",
            "dest": "backend/api/index.py"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/dist/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/index.html"
        }
    ],
    "env": {
        "PYTHONPATH": "backend"
    }
}