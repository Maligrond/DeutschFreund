{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/api/index.py"
        },
        {
            "source": "/docs",
            "destination": "/backend/api/index.py"
        },
        {
            "source": "/openapi.json",
            "destination": "/backend/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "env": {
        "PYTHONPATH": "backend"
    }
}